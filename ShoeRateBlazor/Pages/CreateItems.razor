@page "/create-item"
@using ShoeRateBlazor.Models
@inject ApiService ApiService

<h3>Create Item</h3>

<input type="text" @bind="newItem.Name" placeholder="Name" />
<input type="text" @bind="newItem.Description" placeholder="Description" />
<button @onclick="CreateItem">Create</button>

@code {
    private CreateItemRequest newItem = new CreateItemRequest();

    private async Task CreateItem()
    {
        await ApiService.CreateItemAsync(newItem);
        newItem = new CreateItemRequest();
    }
}
