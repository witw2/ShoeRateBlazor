@page "/register"
@using ShoeRateBlazor.Models
@inject ApiService ApiService
@inject NavigationManager Navigation

<h3>Register</h3>

<input type="email" @bind="newUser.Email" placeholder="Email" />
<input type="text" @bind="newUser.Username" placeholder="Username" />
<input type="password" @bind="newUser.Password" placeholder="Password" />
<input type="password" @bind="newUser.ConfirmPassword" placeholder="Confirm Password" />
<button @onclick="RegisterUser">Register</button>

@code {
    private CreateUserRequest newUser = new CreateUserRequest();

    private async Task RegisterUser()
    {
        await ApiService.RegisterUserAsync(newUser);
        Navigation.NavigateTo("/login");
    }
}
