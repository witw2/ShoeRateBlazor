@page "/rate-item"
@using ShoeRateBlazor.Models
@inject ApiService ApiService

<h3>Rate Item</h3>

<input type="text" @bind="itemId" placeholder="Item ID" />
<input type="number" @bind="newRating" placeholder="Rating" />
<button @onclick="SubmitRating">Rate</button>

@code {
    private string itemId;
    private int newRating;

    private async Task SubmitRating()
    {
        var request = new CreateRatingRequest { Rate = newRating };
        await ApiService.CreateRatingAsync(Guid.Parse(itemId), request);
    }
}
